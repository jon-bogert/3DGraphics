SetResolution(500, 500, 1)

SetViewport(50, 50, 400, 400)
SetClipping(true)
SetCullMode(none)
ShowViewport(true)

float $camX = 0, 0.01
float $camY = 0, 0.01
float $camZ = -5, 0.01

float $camDirX = 0, 0.01
float $camDirY = 0, 0.01
float $camDirZ = 1, 0.01

float $rotY = 0, 0.1

SetCameraPosition($camX, $camY, $camZ)
SetCameraDirection($camDirX, $camDirY, $camDirZ)

PushTranslation(0, 0, 0)
PushRotationZ(-30)
PushRotationY($rotY)
PushRotationX(0)
PushScaling(1, 1, 1)

BeginDraw(triangle, true)

// Front
Vertex(-1, -1, 1, 0, 1, 0)
Vertex(-1, 1, 1, 0, 1, 0)
Vertex(1, 1, 1, 0, 1, 0)
Vertex(-1, -1, 1, 0, 0, 1)
Vertex(1, 1, 1, 0, 0, 1)
Vertex(1, -1, 1, 0, 0, 1)

// Right
Vertex(1, -1, -1, 1, 0, 1)
Vertex(1, 1, -1, 1, 0, 1)
Vertex(1, 1, 1, 1, 0, 1)
Vertex(1, -1, -1, 1, 1, 0)
Vertex(1, 1, 1, 1, 1, 0)
Vertex(1, -1, 1, 1, 1, 0)

EndDraw()